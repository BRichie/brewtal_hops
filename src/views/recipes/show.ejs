<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>
  <% include ../static/partials/navbar.ejs %>

  <main class="container">

    <% include ../static/partials/messages.ejs %>

    <div style="display: flex; align-items:center;">
        <% if(currentUser) { %>
          <% include ../votes/voting.ejs %>
        <% } %>
        <h1><%= recipe.title %></h1>
      </div>


    <% if(currentUser) { %>
    <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">Edit</a>
    <form style="display:initial" action="/recipes/<%= recipe.id %>/destroy" method="post">
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <% } %>
    <p>Style:
      <%= recipe.style %>
    </p>

    <p>Ingredients:
      <%= recipe.ingredients %>
    </p>
    <p>Directions:
      <%= recipe.directions %>
    </p>

    <section id="comment-form">

        
           <% if(currentUser) { %>
             <% include ../comments/new.ejs %>
           <% } %>
          </section>
       
       
          <section id="comment-list">
           <% if(recipe.comments) { %>
             <% recipe.comments.forEach((comment) => { %>
       
       
               <%- include("../comments/show.ejs", {comment}) %>
             <% }) %>
           <% } %>
          </section>

  </main>

  <% include ../static/partials/baseScripts.ejs %>
</body>

</html>
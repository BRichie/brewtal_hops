<!DOCTYPE html>
<html>

<head>
    <% include ../static/partials/head.ejs %>
</head>

<body class="recipeShow">
    <main class="container">

        <% include ../static/partials/navbar.ejs %>

        <% include ../static/partials/messages.ejs %>



        <h1>Edit Brew</h1>


        <form action="/recipes/<%= recipe.id %>/update" method="post">
            <div class="form-group">
                <label for="title">Recipe Title</label>

                <input value="<%= recipe.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp"
                    placeholder="Enter Title">
            </div>
            <div class="form-group">
                <label for="style">Style</label>
                <select class="form-select" name="style">
                    <option>Choose Style</option>
                    <option value="Ale">Ale</option>
                    <option value="Blonde Ale">Blonde</option>
                    <option value="Brown Ale">Brown</option>
                    <option value="IPA">IPA</option>
                    <option value="Kolsch">Kolsch</option>
                    <option value="Lager">Lager</option>
                    <option value="Pilsner">Pilsner</option>
                    <option value="Porter">Porter</option>
                    <option value="Red/Amber">Red/Amber</option>
                    <option value="Sour/Gose">Sour/Gose</option>
                    <option value="Stout">Stout</option>
                </select>
            </div>



            <div class="form-group">
                <label for="ingredients">Ingredients</label>

                <textarea rows="4" class="form-control" name="ingredients" placeholder="Enter Ingredients"><%= recipe.ingredients %></textarea>
            </div>

            <div class="form-group">
                <label for="style">Directions</label>

                <textarea rows="4" class="form-control" name="directions" placeholder="Enter Directions"><%= recipe.directions %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>
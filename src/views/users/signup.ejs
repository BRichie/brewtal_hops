<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body class="signUpBg">

  <% include ../static/partials/navbar.ejs %>

  <main class="container">
    <% include ../static/partials/messages.ejs %>


    


        <form action="/users/signup" method="post">
          <h1 class="signUpTitle">Sign Up</h1>
          <div class="simple-form">
            <label for="name"></label></label>
            <input type="text" name="name" placeholder="Enter your name" class="form-control" />
            <small class="text-muted" id="usernameHelp"></small>
          </div>

          <div class="simple-form">
            <label for="email"></label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            <small class="text-muted" id="emailHelp"></small>
          </div>

          <div class="simple-form">
            <label for="password"></label>
            <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
            <small class="text-muted" id="passwordHelp"></small>
          </div>

          <div class="simple-form">
            <label for="passwordConfirm"></label>
            <input type="password" class="form-control" name="passwordConfirm" aria-describedby="passwordHelp"
              placeholder="Re-Enter password">
          </div>

          <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>

<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>

  <% include ../static/partials/navbar.ejs %>

  <main class="container">
    <% include ../static/partials/messages.ejs %>


    <h1>Sign up</h1>


    <div class="row">
      <div class="col-md-8">

        <form action="/users/signup" method="post">
          <div class="form-group">
            <label for="name"></label>Name:</label>
            <input type="text" name="name" placeholder="Enter your name" class="form-control" />
            <small class="text-muted" id="usernameHelp">username must be a minimum of 4 characters</small>
          </div>

          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter email">
            <small class="text-muted" id="emailHelp">email address must be a valid address</small>
          </div>

          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
            <small class="text-muted" id="passwordHelp">password must match confirmation below</small>
          </div>

          <div class="form-group">
            <label for="passwordConfirm">Re-Enter Password:</label>
            <input type="password" class="form-control" name="passwordConfirm" aria-describedby="passwordHelp"
              placeholder="Re-Enter password">
          </div>

          <button type="submit" class="btn btn-primary">Sign up</button>
        </form>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>